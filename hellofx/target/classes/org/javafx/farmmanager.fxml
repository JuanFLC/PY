<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.javafx.FarmManagerController">
    
    <top>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestor de granjas" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
        </Label>
    </top>
    
    <center>
        <TableView fx:id="farmsTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colName" prefWidth="150" text="Nombre" />
                <TableColumn fx:id="colEspecies" prefWidth="200" text="Especies cultivadas" />
                <TableColumn fx:id="colUbicacion" prefWidth="120" text="Ubicación" />
            </columns>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
        </TableView>
    </center>
    
    <bottom>
        <VBox spacing="10" style="-fx-padding: 20;">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints maxWidth="122.39996337890625" minWidth="104.79998779296875" prefWidth="122.39996337890625" />
                    <ColumnConstraints maxWidth="295.20001220703125" minWidth="277.60003662109375" prefWidth="277.60003662109375" />
                </columnConstraints>
                
                <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Especies cultivadas:" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin></Label>
                
                <Label text="Departamento:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <ChoiceBox fx:id="chDepartamento" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Municipio:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <ChoiceBox fx:id="chMunicipio" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Ciudad:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <ChoiceBox fx:id="chCiudad" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <CheckBox fx:id="cbTilapia" mnemonicParsing="false" text="Tilapia roja (Mojarra)" />
                  <CheckBox fx:id="cbCarpa" mnemonicParsing="false" text="Carpa" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <CheckBox fx:id="cbSalmon" mnemonicParsing="false" text="Salmón" GridPane.columnIndex="1" />
                  <CheckBox fx:id="cbBagre" mnemonicParsing="false" text="Bagre" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
            
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnAdd" onAction="#handleAddGranja" text="Agregar" />
                <Button fx:id="btnUpdate" disable="true" onAction="#handleUpdateGranja" text="Actualizar" />
                <Button fx:id="btnDelete" disable="true" onAction="#handleDeleteGranja" text="Eliminar" />
                <Button fx:id="btnClear" onAction="#handleClear" text="Limpiar" />
            </HBox>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>
