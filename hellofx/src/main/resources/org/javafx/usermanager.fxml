<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.javafx.UserManagerController">
    
    <top>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Sistema de Gestión de Usuarios" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
        </Label>
    </top>
    
    <center>
        <TableView fx:id="usersTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colName" prefWidth="150" text="Nombre" />
                <TableColumn fx:id="colEmail" prefWidth="200" text="Email" />
                <TableColumn fx:id="colPhone" prefWidth="120" text="Teléfono" />
                <TableColumn fx:id="colDepartment" prefWidth="150" text="Departamento" />
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <VBox spacing="10" style="-fx-padding: 20;">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="100" />
                    <ColumnConstraints prefWidth="300" />
                </columnConstraints>
                
                <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="txtPhone" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                
                <Label text="Departamento:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="txtDepartment" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
            
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnAdd" onAction="#handleAddUser" text="Agregar" />
                <Button fx:id="btnUpdate" disable="true" onAction="#handleUpdateUser" text="Actualizar" />
                <Button fx:id="btnDelete" disable="true" onAction="#handleDeleteUser" text="Eliminar" />
                <Button fx:id="btnClear" onAction="#handleClear" text="Limpiar" />
            </HBox>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>
